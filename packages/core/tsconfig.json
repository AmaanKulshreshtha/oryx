{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDirs": ["src"],
    "baseUrl": "src",
    "paths": {
      "Components/*": ["components/*"],
      "Typings/*": ["typings/*"]
    },
    "declaration": true,
    "outDir": "./lib",
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}